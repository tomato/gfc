<h1><%= image_tag("fromwhereitsgrown.gif") %></h1>
<div id="leftbar">
  <div id="menu">
    <%= image_tag("menu/cheese.gif") %><br/>
    <%= image_tag("menu/meat.gif") %><br/>
    <%= image_tag("menu/bread.gif") %><br/>
    <%= image_tag("menu/veg.gif") %><br/>
    <%= image_tag("menu/pies.gif") %><br/>
    <%= image_tag("menu/drinks.gif") %><br/>
    <%= image_tag("menu/therest.gif") %><br/>
  </div>
</div>
<div id="main">
  <div id="selectionbox">
    <% i=0
    for producer in @producers
    cell_class = "Cell" + (i+=1).to_s -%>
    <div class="SelectionImage <%=cell_class %>" >
      <%= link_to(image_tag(producer.main_image.name, :size => "240x160"),
      :action => 'view', :id => producer.id) %>
    </div>
    <div class="SelectionText <%=cell_class %>">
      <b><%= producer.name %></b><br/><%= producer.summary %>
    </div> 
    <% end -%>
  </div>
</div>
