%h2= @producer.name
- @producer.answers.each_with_index do |p,i|
  %p{:class => flip_flop(i)} 
    =image_tag p.image_path
    =h(p.text)
=link_to 'Sounds good? Here\'s our products',producer_products_path(@producer)

#selectionbox
  - @producer.products.each_with_index do |product,i|
    %div{:class => "SelectionImage #{grid(i)}"}
      = link_to(image_tag(product.image_path), producer_product_url(@producer.id, product.id))
    %div{:class => "SelectionText #{grid(i)}"}
      %strong= product.name
      %br
      =product.description
=link_to 'New', new_producer_product_path(@producer)
